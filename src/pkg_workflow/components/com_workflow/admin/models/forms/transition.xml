<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<form>
	<fieldset>
		<field name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			default="0"
			class="readonly"
			size="10"
			readonly="true" />

		<field name="workflow_id"
			type="workflow"
			label="COM_WORKFLOW_FIELD_WORKFLOW_ID"
			description="COM_WORKFLOW_FIELD_WORKFLOW_DESC"
			onchange="WFform.reload('target_state_id', 'transition-form');"
			default="0"
			class="inputbox"
			required="true" />
			
		<field name="target_state_id"
			type="workflowstate"
			label="COM_WORKFLOW_FIELD_TARGET_STATE_LABEL"
			description="COM_WORKFLOW_FIELD_TARGET_STATE_DESC"
			class="inputbox"
			required="true"
		/>
		
		<field name="system_path"
			type="list"
			label="COM_WORKFLOW_FIELD_SYSTEM_PATH_LABEL"
			description="COM_WORKFLOW_FIELD_SYSTEM_PATH_DESC"
			class="inputbox"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field name="fromstates"
			type="fromstates" multiple="true" class="advancedSelect span12"
			label="COM_WORKFLOW_FIELD_FROM_STATES_LABEL"
			description="COM_WORKFLOW_FIELD_FROM_STATES_DESC" />
				
		<field name="allowed_users"
			type="ajaxusers" multiple="true" class="advancedSelectUsers"
			label="COM_WORKFLOW_FIELD_TRANSITION_ALLOWED_USERS_LABEL"
			description="COM_WORKFLOW_FIELD_TRANSITION_ALLOWED_USERS_DESC"
			/>
		<field name="allowed_groups" 
			type="usergrouplist" multiple="true" class="advancedSelect"
			label="COM_WORKFLOW_FIELD_TRANSITION_ALLOWED_GROUPS_LABEL"
			description="COM_WORKFLOW_FIELD_TRANSITION_ALLOWED_GROUPS_DESC"
			/> 
		<field name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC"
			class="inputbox"
			size="45"
			required="true" />

		<field name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			class="inputbox"
			size="45" />

		<field name="note"
			type="text"
			label="JFIELD_NOTE_LABEL"
			description="JFIELD_NOTE_DESC"
			class="inputbox"
			size="45" />

		<field name="published"
			type="list"
			label="JPUBLISHED"
			description="JFIELD_PUBLISHED_DESC"
			default="1"
			class="inputbox"
			filter="intval"
			size="1">
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="-2">
				JTRASHED</option>
		</field>

		<field name="ordering"
			type="text"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			default="0"
			class="inputbox"
			size="6" />

		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox"
			size="1" />

		<field name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="JFIELD_FIELD_LANGUAGE_DESC"
			default="*"
			class="inputbox">
			<option value="*">JALL</option>
		</field>

		<field name="metadesc"
			type="textarea"
			label="JFIELD_META_DESCRIPTION_LABEL"
			description="JFIELD_META_DESCRIPTION_DESC"
			class="inputbox"
			rows="3"
			cols="30" />

		<field name="metakey"
			type="textarea"
			label="JFIELD_META_KEYWORDS_LABEL"
			description="JFIELD_META_KEYWORDS_DESC"
			class="inputbox"
			rows="3"
			cols="30" />

		<field name="checked_out"
			type="hidden"
			filter="unset" />

		<field name="checked_out_time"
			type="hidden"
			filter="unset" />

		<field name="created_by"
			type="hidden"
			filter="unset" />

		<field name="created"
			type="text"
			label="COM_WORKFLOW_FIELD_CREATED_TIME_LABEL"
			description="COM_WORKFLOW_FIELD_CREATED_TIME_DESC"
			class="readonly"
			size="20"
			readonly="true"
			filter="unset" />

		<field name="modified_by"
			type="hidden"
			filter="unset" />

		<field name="modified"
			type="text"
			label="COM_WORKFLOW_FIELD_MODIFIED_TIME_LABEL"
			description="COM_WORKFLOW_FIELD_MODIFIED_TIME_DESC"
			class="readonly"
			size="20"
			readonly="true"
			filter="unset" />
		
		<field name="elements" type="hidden" filter="unset" />
	</fieldset>
	<fields name="params">
		<fieldset name="basic" label="COM_WORKFLOW_BASIC_PARAMS_FIELDSET_LABEL">
			<field name="comment_required"
				type="radio"
				class="btn-group"
				label="COM_WORKFLOW_FIELD_TRANSITION_REQ_COMMENT_LABEL"
				description="COM_WORKFLOW_FIELD_TRANSITION_REQ_COMMENT_DESC"
				default="0">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="notify_author"
				type="radio"
				class="btn-group"
				label="COM_WORKFLOW_FIELD_TRANSITION_NOTIFY_AUTHOR_LABEL"
				description="COM_WORKFLOW_FIELD_TRANSITION_NOTIFY_AUTHOR_DESC"
				default="0">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="notify_owner"
				type="radio"
				class="btn-group"
				label="COM_WORKFLOW_FIELD_TRANSITION_NOTIFY_OWNER_LABEL"
				description="COM_WORKFLOW_FIELD_TRANSITION_NOTIFY_OWNER_DESC"
				default="0">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="notify_actor"
				type="radio"
				class="btn-group"
				label="COM_WORKFLOW_FIELD_TRANSITION_NOTIFY_ACTOR_LABEL"
				description="COM_WORKFLOW_FIELD_TRANSITION_NOTIFY_ACTOR_DESC"
				default="0">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>			
		</fieldset>
	</fields>	
	
</form>