<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<form>
	<fieldset>
		<field name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			default="0"
			class="readonly"
			size="10"
			readonly="true"  />

		<field name="transition_id"
			type="transition"
			label="COM_WORKFLOW_FIELD_TRANSITION_LABEL"
			description="COM_WORKFLOW_FIELD_TRANSITION_DESC"
			size="45"
			readonly="true" />
			
		<field name="plugin_id"
			type="plugin"
			state="1"
			label="COM_WORKFLOW_FIELD_PLUGIN_LABEL"
			description="COM_WORKFLOW_FIELD_PLUGIN_DESC"
			class="inputbox"
			required="true" />
			
		<field name="namespace"
			type="text"
			label="COM_WORKFLOW_FIELD_NAMESPACE_LABEL"
			description="COM_WORKFLOW_FIELD_NAMESPACE_DESC"
			class="inputbox readonly"
			size="55"
			readonly="true" />
						
		<field name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC"
			class="inputbox"
			size="55"
			required="true" />
			
		<field name="note"
			type="text"
			label="JFIELD_NOTE_LABEL"
			description="JFIELD_NOTE_DESC"
			class="inputbox"
			size="45" />

		<field name="published"
			type="list"
			label="JPUBLISHED"
			description="JFIELD_PUBLISHED_DESC"
			default="1"
			class="inputbox"
			filter="intval"
			size="1">
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="-2">
				JTRASHED</option>
		</field>

		<field name="ordering"
			type="text"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			default="0"
			class="inputbox"
			size="6" />

		<field name="metadesc"
			type="textarea"
			label="JFIELD_META_DESCRIPTION_LABEL"
			description="JFIELD_META_DESCRIPTION_DESC"
			class="inputbox"
			rows="3"
			cols="30" />

		<field name="metakey"
			type="textarea"
			label="JFIELD_META_KEYWORDS_LABEL"
			description="JFIELD_META_KEYWORDS_DESC"
			class="inputbox"
			rows="3"
			cols="30" />

		<field name="checked_out"
			type="hidden"
			filter="unset" />

		<field name="checked_out_time"
			type="hidden"
			filter="unset" />

		<field name="created_by"
			type="hidden"
			filter="unset" />

		<field name="created"
			type="text"
			label="COM_WORKFLOW_FIELD_CREATED_TIME_LABEL"
			description="COM_WORKFLOW_FIELD_CREATED_TIME_DESC"
			class="readonly"
			size="20"
			readonly="true"
			filter="unset" />

		<field name="modified_by"
			type="hidden"
			filter="unset" />

		<field name="modified"
			type="text"
			label="COM_WORKFLOW_FIELD_MODIFIED_TIME_LABEL"
			description="COM_WORKFLOW_FIELD_MODIFIED_TIME_DESC"
			class="readonly"
			size="20"
			readonly="true"
			filter="unset" />
	</fieldset>

	<fields name="params">
		<fieldset name="basic" label="COM_WORKFLOW_BASIC_PARAMS_FIELDSET_LABEL">
			<field name="show_title"
				type="list"
				label="JGLOBAL_SHOW_TITLE_LABEL"
				description="COM_WORKFLOW_PARAM_SHOW_TITLE_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>
	</fields>

</form>
