<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<form>
	<fieldset>
		<field name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			default="0"
			class="readonly"
			size="10"
			readonly="true"  />

		<field name="workflow_id"
			type="workflow"
			label="JCATEGORY"
			description="JFIELD_CATEGORY_DESC"
			default="0"
			class="inputbox"
			required="true" />

		<field name="context"
			type="text"
			label="COM_WORKFLOW_CONTEXT_LABEL"
			description="COM_WORKFLOW_CONTEXT_DESC"
			class="inputbox"
			size="45"
			required="true" />
			
		<field name="forms"
			type="textarea"
			label="COM_WORKFLOW_FIELD_FORMS_LABEL"
			description="COM_WORKFLOW_FIELD_FORMS_DESC"
			class="inputbox"
			rows="4"
			cols="45"
			/>
		<field name="note"
			type="text"
			label="JFIELD_NOTE_LABEL"
			description="JFIELD_NOTE_DESC"
			class="inputbox"
			size="45" />

		<field name="published"
			type="list"
			label="JPUBLISHED"
			description="JFIELD_PUBLISHED_DESC"
			default="1"
			class="inputbox"
			filter="intval"
			size="1">
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="-2">
				JTRASHED</option>
		</field>

		<field name="ordering"
			type="text"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			default="0"
			class="inputbox"
			size="6" />

		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox"
			size="1" />

		<field name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="JFIELD_FIELD_LANGUAGE_DESC"
			default="*"
			class="inputbox">
			<option value="*">JALL</option>
		</field>

		<field name="checked_out"
			type="hidden"
			filter="unset" />

		<field name="checked_out_time"
			type="hidden"
			filter="unset" />

		<field name="created_by"
			type="hidden"
			filter="unset" />

		<field name="created"
			type="text"
			label="COM_WORKLOW_FIELD_CREATED_TIME_LABEL"
			description="COM_WORKLOW_FIELD_CREATED_TIME_DESC"
			class="readonly"
			size="20"
			readonly="true"
			filter="unset" />

		<field name="modified_by"
			type="hidden"
			filter="unset" />

		<field name="modified"
			type="text"
			label="COM_WORKLOW_FIELD_MODIFIED_TIME_LABEL"
			description="COM_WORKLOW_FIELD_MODIFIED_TIME_DESC"
			class="readonly"
			size="20"
			readonly="true"
			filter="unset" />
	</fieldset>

	<fields name="params">
		<fieldset name="basic" label="COM_WORKLOW_BASIC_PARAMS_FIELDSET_LABEL">
			<field name="table_path" type="text"
				label="COM_WORKFLOW_FIELD_TABLE_PATH_LABEL" 
				description="COM_WORKFLOW_FIELD_TABLE_PATH_DESC"/>
			<field name="table_prefix" type="text"
				required="true"
				label="COM_WORKFLOW_FIELD_TABLE_PREFIX_LABEL" 
				description="COM_WORKFLOW_FIELD_TABLE_PREFIX_DESC" />
			<field name="table_name" type="text"
				required="true"
				label="COM_WORKFLOW_FIELD_TABLE_NAME_LABEL" 
				description="COM_WORKFLOW_FIELD_TABLE_NAME_DESC"/>
		</fieldset>

		<fieldset name="advanced" label="COM_WORKLOW_ADVANCED_PARAMS_FIELDSET_LABEL">
			<field name="other_mappings"
				type="textarea"
				label="COM_WORKFLOW_FIELD_OTHER_MAPPINGS_LABEL"
				description="COM_WORKFLOW_FIELD_OTHER_MAPPINGS_DESC"
				rows="5"
				cols="30" />
		</fieldset>		
	</fields>

</form>
