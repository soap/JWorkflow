<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<form>
	<fieldset>
		<field name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			default="0"
			class="readonly"
			size="10"
			readonly="true"  />

		<field name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC"
			class="inputbox"
			size="45"
			required="true" />

		<field name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			class="inputbox"
			size="45" />

		<field name="description"
			type="editor"
			label="COM_WORKFLOW_FIELD_DESCRIPTION_LABEL"
			description="COM_WORKFLOW_FIELD_DESCRIPTION_DESC"
			class="inputbox"
			filter="safehtml"
			buttons="true" />
		
		<field name="method_params"
			type="textarea"
			label="COM_WORKFLOW_FIELD_METHOD_PARAMS_LABEL"
			description="COM_WORKFLOW_FIELD_METHOD_PARAMS_DESC"
			rows="5"
			cols="120"
			class="inputbox"
			filter="safehtml" />

		<field name="note"
			type="text"
			label="JFIELD_NOTE_LABEL"
			description="JFIELD_NOTE_DESC"
			class="inputbox"
			size="45" />

		<field name="published"
			type="list"
			label="JPUBLISHED"
			description="JFIELD_PUBLISHED_DESC"
			default="1"
			class="inputbox"
			filter="intval"
			size="1">
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>

		<field name="ordering"
			type="text"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			default="0"
			class="inputbox"
			size="6" />

		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox"
			size="1" />

		<field name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="JFIELD_FIELD_LANGUAGE_DESC"
			default="*"
			class="inputbox">
			<option value="*">JALL</option>
		</field>

		<field name="checked_out"
			type="hidden"
			filter="unset" />

		<field name="checked_out_time"
			type="hidden"
			filter="unset" />

		<field name="created_by"
			type="hidden"
			filter="unset" />

		<field name="created"
			type="text"
			label="COM_WORKFLOW_FIELD_CREATED_TIME_LABEL"
			description="COM_WORKFLOW_FIELD_CREATED_TIME_DESC"
			class="readonly"
			size="20"
			readonly="true"
			filter="unset" />

		<field name="modified_by"
			type="hidden"
			filter="unset" />

		<field name="modified"
			type="text"
			label="COM_WORKFLOW_FIELD_MODIFIED_TIME_LABEL"
			description="COM_WORKFLOW_FIELD_MODIFIED_TIME_DESC"
			class="readonly"
			size="20"
			readonly="true"
			filter="unset" />
	</fieldset>

	<fields name="params">
		<fieldset name="basic" label="COM_WORKFLOW_BASIC_PARAMS_FIELDSET_LABEL">
		</fieldset>

		<fieldset name="advanced" label="COM_WORKFLOW_ADVANCED_PARAMS_FIELDSET_LABEL">
		</fieldset>
	</fields>

</form>

