<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="trigger_config">
		<fieldset name="trigger_config">
			<field name="groups"
				type="usergroup"
				label="TRG_GUARD_USERGROUP_GROUP_LABEL"
				description="TRG_GUARD_USERGROUP_GROUP_DESC"
				multiple="true"
				size="10" 
				required="true"
			/>
			<field name="inherited_group"
				type="list"
				label="TRG_GUARD_USERGROUP_INCLUDE_INHERITED_GROUP_LABEL"
				description="TRG_GUARD_USERGROUP_INCLUDE_INHERITED_GROUP_DESC"
				default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="allowowner"
				type="list"
				label="TRG_GUARD_USERGROUP_ALLOWOWNER_LABEL"
				description="TRG_GUARD_USERGROUP_ALLOWOWNER_DESC"
				size="1" 
				default="0">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			
			<field name="ownerfield"
				type="text"
				label="TRG_GUARD_USERGROUP_OWNERFIELD_LABEL"
				description="TRG_GUARD_USERGROUP_OWNERFIELD_DESC"
				size="15" 
				default="created_by" />
		</fieldset>
	</fields>
</form>
