<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="trigger_config">
		<fieldset name="trigger_config">
			<field name="item_type"
				type="text"
				label="TRG_ACTION_JOOMLACONTENT_ITEM_TYPE_LABEL"
				description="TRG_ACTION_JOOMLACONTENT_ITEM_TYPE_DESC"
				class="inputbox"
				default="com_content.article"
				size="35"
				readonly="true" 
			/>
			
			<field name="publishing_state"
				type="list"
				label="TRG_ACTION_JOOMLACONTENT_UPDATE_PUBLISHING_STATE_LABEL"
				description="TRG_ACTION_JOOMLACONTENT_UPDATE_PUBLISHING_STATE_DESC" 
				class="inputbox"
				default="unchange">
				<option value="unchange">TRG_ACTION_JOOMLACONTENT_OPTION_UNCHANGE</option>
				<option value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
				<option value="2">JARCHIVED</option>
				<option value="-2">JTRASHED</option>
			</field>
		</fieldset>
	</fields>
</form>